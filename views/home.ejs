<h1>
    Codeial / <%= title %>
</h1>

<section id="feed-post">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" rows="3" cols="30" placeholder="What's on your mind?"></textarea>
        <input type="submit" value="Post">
    </form>

    <div id="posts-list-ctn">
        <% if (locals.user) { %>
        <ul>
            <% for (post of user_posts) { %>
            <li>
                <p>
                    <%= post.content %>
                    <br>
                    <small><%= post.user.name %> </small>
                </p>
            </li>
            <% } %>
        </ul>
        <% } %>
    </div>
</section>